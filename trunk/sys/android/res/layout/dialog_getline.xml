<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@android:drawable/screen_background_dark_transparent"
	android:clickable="true"
	android:focusableInTouchMode="true"
	android:nextFocusDown="@+id/input"
	android:nextFocusUp="@+id/input"
	android:nextFocusLeft="@+id/btn_1"
	android:nextFocusRight="@+id/btn_0"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		style="@style/NH_Dialog"
		android:orientation="vertical"
		android:layout_centerInParent="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
		    android:id="@+id/title"
			style="@style/DialogText"
			android:text="Title"
			android:padding="12dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<ImageView
			android:background="@android:drawable/divider_horizontal_bright"
			android:layout_width="fill_parent"
			android:layout_height="2px"/>
		
		<EditText
			android:id="@+id/input"
		    style="@style/InputText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="6dip"
			android:text=""
			android:imeOptions="actionSend|flagNoExtractUi|flagNoEnterAction|flagNoAccessoryAction"
			android:inputType="textNoSuggestions|textLongMessage"
			android:maxLength="200"
			android:maxLines="1"
			android:singleLine="true"
			android:cursorVisible="true"/>
			
		<LinearLayout
			style="@android:style/ButtonBar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<Button
				android:id="@+id/btn_0"
			    style="@style/ButtonText"
				android:text="Ok"
				android:layout_weight="1"
				android:layout_width="0dip"
				android:layout_height="wrap_content"/>
			<Button
				android:id="@+id/btn_1"
			    style="@style/ButtonText"
				android:text="Cancel"
				android:layout_weight="1"
				android:layout_width="0dip"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
	

