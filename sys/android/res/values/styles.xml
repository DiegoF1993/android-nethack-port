<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MonospaceText" parent="@android:style/TextAppearance.Medium">
		<item name="android:typeface">monospace</item>
		<item name="android:textSize">11sp</item>
		<item name="android:textColor">#ffffffff</item>
    </style>
    <style name="DialogText" parent="@android:style/TextAppearance.Medium">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">#ffffffff</item>
    </style>
    <style name="ListItem1" parent="@android:style/TextAppearance.Medium">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">16sp</item>
		<item name="android:ellipsize">end</item>
		<item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ListItem2" parent="@android:style/TextAppearance.Medium">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">14sp</item>
		<item name="android:ellipsize">end</item>
		<item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

	<style name="dPadBtn" parent="@android:style/Widget.Button">
		<item name="android:layout_width">50dip</item>
		<item name="android:layout_height">50dip</item>
		<item name="android:textSize">16dip</item>
        <item name="android:gravity">center</item>
	</style>
	    
    <style name="Menu" parent="android:style/Theme.Dialog">
    </style>
    
    <style name="MenuNoTitle" parent="android:style/Theme.Dialog">
    	<item name="android:windowNoTitle">true</item>
    </style>
		    
</resources>